<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reTopTitleView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivBack"
        style="@style/BACK_BLACK_STYLE" />

    <LinearLayout
        android:id="@+id/llTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.5dp"
        android:layout_marginRight="9.1dp"
        android:layout_toLeftOf="@+id/llRightView"
        android:layout_toRightOf="@id/ivBack"
        android:background="@drawable/search_video_white_selector"
        android:orientation="horizontal"
        android:paddingLeft="14dp">

        <TextView
            android:id="@+id/tvWebTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:maxEms="6"
            android:textColor="@color/c_333333"
            android:textSize="12sp" />

        <View
            android:id="@+id/vVerLine"
            android:layout_width="0.5dp"
            android:layout_height="11.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/c_333333" />

        <TextView
            android:id="@+id/tvWebUrl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="http://"
            android:textColor="@color/c_333333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRightView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivReload"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:src="@mipmap/ic_refresh_black" />
    </LinearLayout>
</RelativeLayout>