<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--top bar start-->
    <style name="BACK_BLACK_STYLE">
        <item name="android:paddingLeft">4.8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@mipmap/ic_back_black</item>
    </style>

    <style name="CLOSE_BLACK_STYLE">
        <item name="android:paddingLeft">5.5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@mipmap/ic_back_black</item>
        <item name="android:layout_toRightOf">@id/ivBack</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
